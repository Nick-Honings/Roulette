@model Roulette.ASP.NET.Models.ColorBetModel

@{
    ViewData["Title"] = "PlaceColorBet";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" runat="server" href="~/css/placebet.css" />


<h2>Place ColorBet</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="PlaceColorBet">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Stake" class="control-label"></label>
                <input asp-for="Stake" class="form-control" />
                <span asp-validation-for="Stake" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Color" class="control-label"></label>
                <select id="bettype" style="color: black" asp-for="Color" asp-items="@Html.GetEnumSelectList<Roulette.Color>()" onchange="valueChange()">
                </select>
                <span asp-validation-for="Color" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>


