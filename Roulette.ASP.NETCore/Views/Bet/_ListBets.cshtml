@model IEnumerable<Roulette.ASP.NETCore.Models.BetModel>
<h2>Current Bets:</h2>

<div class="row">

    @{
        foreach (var bet in Model)
        {
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => bet.Type)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => bet.Type)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => bet.Odd)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => bet.Odd)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => bet.Stake)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => bet.Stake)
                </dd>
                <dt class="col-sm-2">
                    Possible profits:
                </dt>
                <dd class="col-sm-10">
                    @(bet.Stake * bet.Odd)
                </dd>
            </dl>
        };
    }
</div>