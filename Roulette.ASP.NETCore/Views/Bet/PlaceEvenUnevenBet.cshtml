@model Roulette.ASP.NET.Models.EvenUnevenBetModel

@{
    ViewData["Title"] = "PlaceEvenUnevenBet";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" runat="server" href="~/css/placebet.css" />

<h2>Place even or uneven bet</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="PlaceEvenUnevenBet">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Stake" class="control-label"></label>
                <input asp-for="Stake" class="form-control" />
                <span asp-validation-for="Stake" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="IsEven" /> @Html.DisplayNameFor(model => model.IsEven)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>


