@model Roulette.ASP.NETCore.Models.BetModel



<h4>BetModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form id="placebetpartial" asp-action="CreateBet" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <select id="bettype" asp-for="Type" asp-items="@Html.GetEnumSelectList<Roulette.Bets.BetType>()" onload="valueChange()" onchange="valueChange()">
                </select>
            </div>

            <div id="0" class="types color">
                <div class="form-group">
                    <label asp-for="Color" class="control-label"></label>
                    <input type="radio" asp-for="Color" name="color" value="Red" /> Red
                    <input type="radio" asp-for="Color" name="color" value="Black" /> Black
                    <input type="radio" asp-for="Color" name="color" value="Green" /> Green
                    <span asp-validation-for="Color" class="text-danger"></span>
                </div>
            </div>


            <div id="1" class="types even" hidden="hidden">
                <div class="form-group">
                    <label asp-for="IsEven" class="control-label"></label>
                    <input type="radio" asp-for="IsEven" name="type" value="true" /> Even
                    <input type="radio" asp-for="IsEven" name="type" value="false" /> Uneven
                    <span asp-validation-for="IsEven" class="text-danger"></span>
                </div>
            </div>

            <div id="2" class="types neighbour" hidden="hidden">
                <div class="form-group">
                    <label asp-for="FirstNumber" class="control-label"></label>
                    <input type="number" min="0" max="36" asp-for="FirstNumber" class="form-control" />
                    <span asp-validation-for="FirstNumber" class="text-danger"></span>

                    <label asp-for="SecondNumber" class="control-label"></label>
                    <input type="number" min="0" max="36" asp-for="SecondNumber" class="form-control" />
                    <span asp-validation-for="SecondNumber" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Number" class="control-label"></label>
                <input type="number" min="0" max="36" asp-for="Number" class="form-control" />
                <span asp-validation-for="Number" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Stake" class="control-label"></label>
                <input asp-for="Stake" class="form-control" />
                <span asp-validation-for="Stake" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button type="submit" id="createbet" value="Create" class="btn btn-default" onclick="updateBetView()" />
            </div>
        </form>
    </div>
</div>


<div id="current-bets"></div>

<script src="~/js/index.js"></script>

