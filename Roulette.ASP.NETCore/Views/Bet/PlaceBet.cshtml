@model Roulette.ASP.NETCore.Models.SingleNumberBetModel

@{
    ViewData["Title"] = "PlaceBet";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" runat="server" href="~/css/placebet.css" />

<h2>Place Your Bet</h2>

<hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="PlaceBet">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Stake" class="control-label"></label>
                    <input asp-for="Stake" class="form-control" />
                    <span asp-validation-for="Stake" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Number" class="control-label"></label>
                    <input asp-for="Number" min="0" max="36" class="form-control" />
                    <span asp-validation-for="Number" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </form>
        </div>
    </div>


